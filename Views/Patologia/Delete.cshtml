@model projetoTP3_A2.Models.Patologia

@{
    ViewData["Title"] = "Excluir Patologia";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row min-vh-100">

        <div class="col-md-2 p-0">
            <partial name="_Sidebar" />
        </div>

        <div class="col-md-10 p-4">
            <h2 class="mb-4" style="color:#dc3545;">Excluir Patologia</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i> Tem certeza que deseja excluir esta patologia?
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-3 text-muted">Nome</dt>
                        <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-3 text-muted">Descrição</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>