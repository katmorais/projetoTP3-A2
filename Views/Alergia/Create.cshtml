@model projetoTP3_A2.Models.Alergia

@{
    ViewData["Title"] = "Nova Alergia";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row min-vh-100">

        <div class="col-md-2 p-0">
            <partial name="_Sidebar" />
        </div>

        <div class="col-md-10 p-4">
            <h2 class="mb-4" style="color:#14A091;">Nova Alergia</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold">Nome da Alergia</label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Penicilina" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reacao" class="form-label fw-bold">Reação Típica</label>
                            <input asp-for="Reacao" class="form-control" placeholder="Ex: Inchaço, Vermelhidão" />
                            <span asp-validation-for="Reacao" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Voltar
                            </a>

                            <button type="submit" class="btn" style="background-color:#14A091;color:white;">
                                Salvar
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}