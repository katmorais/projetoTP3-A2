@model projetoTP3_A2.Models.Alergia

@{
    ViewData["Title"] = "Detalhes da Alergia";
    Layout = "_Layout";
}

<style>
    .titulo-verde {
        color: #14A091;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .btn-acoes {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-acoes:hover {
            background-color: #118072;
            color: #fff;
        }

    .btn-voltar {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

        .btn-voltar:hover {
            background-color: #5a6268;
            color: #fff;
        }

    .dl-custom dt {
        font-weight: 600;
        color: #0F6E63;
    }

    .dl-custom dd {
        color: #333;
    }

    .card-custom {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        padding: 1rem;
    }
</style>

<div class="container-fluid">

    <!-- Sidebar -->
    <div class="col-md-2 float-start">
        <partial name="_Sidebar" />
    </div>

    <!-- Conteúdo principal -->
    <div class="col-md-10 float-start">
        <h2 class="titulo-verde">Detalhes da Alergia</h2>

        <div class="card card-custom">
            <dl class="row dl-custom">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reacao)
                </dd>
            </dl>

            <div class="mt-3 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-acoes">Editar</a>
                <a asp-action="Index" class="btn btn-voltar">Voltar</a>
            </div>
        </div>
    </div>
</div>
