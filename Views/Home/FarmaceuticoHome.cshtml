@{
    ViewData["Title"] = "Área do Farmacêutico";
    Layout = "_Layout";
}

<style>
    .btn-pesquisar { background-color: #14A091; color: #fff; border: none; }
    .btn-pesquisar:hover { background-color: #118072; color: #fff; }
    
    /* Cores da tabela */
    .table-custom thead tr th { background-color: #D0F5F2 !important; color: #14A091 !important; }
    .table-custom tbody tr td { background-color: #E7FDFB !important; color: #14A091 !important; }
    .table-custom tbody tr:hover td { background-color: #C4ECE9 !important; color: #14A091 !important; }
</style>

<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-md-2 p-0">
            <partial name="_Sidebar" />
        </div>

        <div class="col-md-10 p-4">
            <h2 style="color:#14A091;" class="mb-4">Dispensação de Medicamentos</h2>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title text-secondary">Ações Rápidas</h5>
                    <p class="card-text">Acesse a lista completa de prescrições para realizar a baixa de medicamentos.</p>
                    <a asp-controller="Prescricao" asp-action="Index" class="btn btn-pesquisar">
                        <i class="bi bi-list-check"></i> Ver Prescrições Pendentes
                    </a>
                </div>
            </div>

            <h4 class="text-secondary mb-3">Últimas Movimentações</h4>
            
            <div class="table-responsive">
                <table class="table table-hover border rounded shadow-sm table-custom">
                    <thead>
                        <tr>
                            <th>Paciente</th>
                            <th>Medicamento</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Maria Silva</td>
                            <td>Dipirona 500mg</td>
                            <td><span class="badge bg-warning text-dark">Pendente</span></td>
                            <td>
                                <a asp-controller="Prescricao" asp-action="Index" class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-check2-circle"></i> Atender
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>João Souza</td>
                            <td>Amoxicilina 875mg</td>
                            <td><span class="badge bg-success">Liquidado</span></td>
                            <td>
                                <button class="btn btn-sm btn-secondary" disabled>Concluído</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</div>