@model IEnumerable<projetoTP3_A2.Models.Medicamento>
@using projetoTP3_A2.Models.Enum

@{
    ViewData["Title"] = "Gestão de Medicamentos";
    Layout = "_Layout";
}

<style>
    .titulo-verde { color: #14A091; font-weight: 600; }
    .btn-novo { background-color: #14A091; color: #fff; border: none; }
    .btn-novo:hover { background-color: #118072; color: #fff; }
    
    .table-custom thead tr th { background-color: #A7E8DF !important; color: #0F6E63 !important; text-align: center; }
    .table-custom tbody tr td { background-color: #F9F9F9 !important; color: #333 !important; vertical-align: middle; }
    .table-custom tbody tr:hover td { background-color: #E0F2F1 !important; }
</style>

<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-md-2 p-0">
            <partial name="_Sidebar" />
        </div>

        <div class="col-md-10 p-4">
            <h2 class="mb-4 titulo-verde">Medicamentos Cadastrados</h2>

            @if (User.IsInRole("Administrador"))
            {
                <div class="d-flex justify-content-end mb-3">
                    <a asp-action="Create" class="btn btn-sm btn-novo shadow-sm">
                        <i class="bi bi-plus-lg"></i> Novo Medicamento
                    </a>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover border rounded shadow-sm table-custom text-center">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nome)</th>
                            <th>@Html.DisplayNameFor(model => model.Dosagem)</th>
                            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                            <th>@Html.DisplayNameFor(model => model.Frequencia)</th>
                            <th style="width: 220px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.Nome</td>
                                <td>@item.Dosagem</td>
                                <td><span class="badge bg-light text-dark border">@item.Tipo</span></td>
                                <td>@item.Frequencia</td>
                                <td class="d-flex justify-content-center gap-1">
                                    
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                    }

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>

                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="alert alert-light text-center border mt-3">
                    Nenhum medicamento cadastrado.
                </div>
            }
        </div>
    </div>
</div>