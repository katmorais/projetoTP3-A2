@model projetoTP3_A2.Models.ViewModels.ProntuarioViewModel
@using projetoTP3_A2.Models.Enum

@{
    ViewData["Title"] = "Prontuário Eletrônico";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-md-2 p-0">
            <partial name="_Sidebar" />
        </div>

        <div class="col-md-10 p-4">
            
            <div class="card border-0 shadow-sm mb-4" style="border-left: 5px solid #14A091 !important;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="mb-1 text-dark">@Model.Paciente.Nome</h2>
                            <p class="text-muted mb-0"><i class="bi bi-envelope"></i> @Model.Paciente.Email</p>
                            <span class="badge bg-light text-dark border mt-2">Paciente</span>
                        </div>
                        <a asp-action="Pacientes" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Voltar para Lista
                        </a>
                    </div>
                </div>
            </div>

            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Histórico de Prescrições</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Exames (Em breve)</a>
                </li>
            </ul>

            <h4 class="mb-3" style="color: #14A091;">Histórico Clínico</h4>

            @if (Model.HistoricoPrescricoes.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover border rounded shadow-sm bg-white">
                        <thead class="table-light">
                            <tr>
                                <th>Data</th>
                                <th>Médico</th>
                                <th>Medicamentos</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prescricao in Model.HistoricoPrescricoes)
                            {
                                <tr>
                                    <td>@prescricao.DataPrescricao.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@prescricao.Medico?.Nome</td>
                                    <td>
                                        @foreach(var item in prescricao.Itens)
                                        {
                                            <span class="d-block small">• @item.Medicamento?.Nome (@item.Quantidade)</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (prescricao.Status)
                                        {
                                            case PrescricaoStatus.Pendente:
                                                <span class="badge bg-warning text-dark">Pendente</span>
                                                break;
                                            case PrescricaoStatus.Realizado:
                                                <span class="badge bg-primary">Realizado</span>
                                                break;
                                            case PrescricaoStatus.Liquidado:
                                                <span class="badge bg-success">Liquidado</span>
                                                break;
                                            case PrescricaoStatus.Cancelado:
                                                <span class="badge bg-danger">Cancelado</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-controller="Prescricao" asp-action="Details" asp-route-id="@prescricao.Id" class="btn btn-sm btn-outline-info">
                                            Ver Detalhes
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-light text-center border p-5">
                    <i class="bi bi-folder2-open fs-1 text-muted"></i>
                    <p class="mt-3 text-muted">Nenhum registro clínico encontrado para este paciente.</p>
                    <a asp-controller="Prescricao" asp-action="Create" class="btn btn-primary mt-2">
                        Nova Prescrição
                    </a>
                </div>
            }

        </div>
    </div>
</div>