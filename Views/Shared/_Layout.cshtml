<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SUSDigital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projetoTP3_A2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm fixed-top navbar-custom" style="background-color: #E7FDFB !important; height: 64px;">
            <div class="container-fluid px-4 h-100">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index" style="color: #14A091; font-size: 1.5rem;">
                    <i class="bi bi-hospital-fill me-2"></i>SUSDigital
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="text-end me-3 lh-1">
                                <span class="d-block fw-bold" style="color:#14A091; font-size: 0.9rem;">Ol√°, @User.Identity.Name</span>
                            </div>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="btn btn-outline-secondary btn-sm">Sair</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div style="margin-top: 64px;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>