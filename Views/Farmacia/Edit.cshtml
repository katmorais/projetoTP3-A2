@model projetoTP3_A2.Models.Farmacia

@{
    ViewData["Title"] = "Editar Farmácia";
}

<style>
    h2.text-destaque {
        color: #14A091;
        font-weight: 600;
    }

    .card-editar {
        background-color: #E7FDFB;
        border: none;
    }

        .card-editar label {
            color: #14A091;
            font-weight: 600;
        }

    .btn-voltar {
        background-color: #E7FDFB;
        color: #14A091;
        border: none;
    }

        .btn-voltar:hover {
            background-color: #D0F5F2;
            color: #118072;
        }

    .btn-salvar {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-salvar:hover {
            background-color: #118072;
            color: #fff;
        }
</style>

<div class="container-fluid">
    <!-- Coluna do menu lateral -->
    <div class="col-md-2">
        <partial name="_Sidebar" />
    </div>

    <!-- Coluna do conteúdo principal -->
    <div class="col-md-10">
        <h2 class="text-destaque mb-4">Editar Farmácia</h2>

        <div class="card shadow-sm card-editar">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Endereco" class="form-label">Endereço</label>
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-sm btn-voltar">Voltar</a>
                        <button type="submit" class="btn btn-sm btn-salvar">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}