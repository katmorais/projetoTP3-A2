@model IEnumerable<projetoTP3_A2.Models.Farmacia>

@{
    ViewData["Title"] = "Farmácias";
    Layout = "_Layout";
}

<style>
    .titulo-verde {
        color: #14A091;
        font-weight: 600;
    }

    .titulo-verde:hover {
        color: #0F6E63;
    }

    .btn-edit {
        background-color: #A7CFFF;
        color: #0A3F7F;
        border: none;
    }

    .btn-edit:hover {
        background-color: #8AB2F0;
        color: #06306A;
    }

    .btn-details {
        background-color: #7FDAD1;
        color: #0F6E63;
        border: none;
    }

    .btn-details:hover {
        background-color: #5FCCBF;
        color: #0B504D;
    }

    .btn-delete {
        background-color: #F5A6A5;
        color: #A93A39;
        border: none;
    }

    .btn-delete:hover {
        background-color: #E98C8B;
        color: #7C2928;
    }

    .btn-nova-farmacia {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

    .btn-nova-farmacia:hover {
        background-color: #118072;
        color: #fff;
    }

    .table-custom thead tr th {
        background-color: #A7E8DF !important;
        color: #0F6E63 !important;
    }

    .table-custom tbody tr td {
        background-color: #F9F9F9 !important;
        color: #333 !important;
        vertical-align: middle;
    }

    .table-custom tbody tr:hover td {
        background-color: #E0F2F1 !important;
    }
</style>

<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-md-2 p-0">
            <partial name="_Sidebar" />
        </div>

        <div class="col-md-10 p-4">
            <h2 style="color:#14A091;" class="mb-4">Farmácias Cadastradas</h2>

            @if (User.IsInRole("Administrador"))
            {
                <div class="d-flex justify-content-end mb-3">
                    <a asp-action="Create" class="btn btn-sm btn-nova-farmacia shadow-sm">
                        <i class="bi bi-plus-lg"></i> Nova Farmácia
                    </a>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover border rounded shadow-sm table-custom">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nome)</th>
                            <th>Endereço Completo</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>
                                    @item.Logradouro, @item.Numero @item.Complemento
                                    <br />
                                    <small class="text-muted">@item.Bairro - @item.Localidade/@item.Uf</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-edit"
                                            title="Editar"><i class="bi bi-pencil-fill"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-details"
                                            title="Detalhes"><i class="bi bi-eye-fill"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-delete"
                                            title="Excluir"><i class="bi bi-trash-fill"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>