@model projetoTP3_A2.Models.Farmacia

@{
    ViewData["Title"] = "Nova Farmácia";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row min-vh-100">

        <div class="col-md-2 p-0">
            <partial name="_Sidebar" />
        </div>

        <div class="col-md-10 p-4">
            <h2 class="mb-4" style="color:#14A091;">Nova Farmácia</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome da Farmácia</label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Farmácia Central" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />
                        <h5 class="text-secondary mb-3">Localização</h5>

                        <div class="mb-3">
                            <label asp-for="Cep" class="form-label">CEP</label>
                            <input asp-for="Cep" class="form-control" placeholder="00000000" maxlength="8" />
                            <div class="form-text">Digite apenas números. O endereço será buscado automaticamente.</div>
                            <span asp-validation-for="Cep" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Numero" class="form-label">Número</label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>

                            <div class="col-md-8 mb-3">
                                <label asp-for="Complemento" class="form-label">Complemento</label>
                                <input asp-for="Complemento" class="form-control" placeholder="Ex: Loja 2, Térreo" />
                                <span asp-validation-for="Complemento" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-light border" role="alert">
                            <i class="bi bi-info-circle"></i> 
                            <small class="text-muted">Logradouro, Bairro, Cidade e UF serão preenchidos automaticamente com base no CEP informado.</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Voltar
                            </a>

                            <button type="submit" class="btn" style="background-color:#14A091;color:white;">
                                Salvar
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}